@using MMS.Models;

@{
    ViewBag.Title = "Admin";

    var memberList = Model as List<Member>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h2 class="sub-header">Member List</h2>
            <br />

            <form class="form-inline">
                <div class="form-group">
                    <input type="text" class="form-control" id="m-name" placeholder="Search by name">
                    <button type="button" class="btn btn-info">Search</button>
                </div>
            </form>
            <br />

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>MemberId</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>PhoneNumber</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in memberList)
                        {
                            <tr>
                                <td class="index">@(memberList.IndexOf(member) + 1)</td>
                                <td class="id">@member.MemberId</td>
                                <td class="name">@member.Name</td>
                                <td class="email">@member.EmailAdderss</td>
                                <td class="phoneNumber">@member.PhoneNumber</td>
                                <td>
                                    <button type="button" data-toggle="modal" data-target="#memberModal" data-type="edit" class="btn btn-warning modal-btn">Edit</button>
                                    <button type="button" data-toggle="modal" data-target="#memberModal" data-type="delete" class="btn btn-danger">Delete</button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <button type="button" data-toggle="modal" data-target="#memberModal" data-type="add" class="btn btn-primary btn-lg modal-btn">Add new member</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>

<div id="memberModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">

                <form id="memberInfo">
                    <input type="hidden" name="memberId" />
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Enter name">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email address</label>
                        <input type="email" class="form-control" name="email" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label class="control-label">PhoneNumber</label>
                        <input type="text" class="form-control" name="phoneNumber" placeholder="Enter phoneNumber">
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-close" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/Scripts/MMS.js"></script>